document.querySelector("#like-unlike-<%= @post.id %>").innerHTML = "<%= escape_javascript(render partial: "shared/unlike_post", locals: {post: @post})%>";
document.querySelector("#like-count-<%= @post.id %>").innerHTML = "<%= "#{@post.likes.count} likes" %>";
document.querySelector("#likers-<%= @post.id %>").innerHTML = "<%= escape_javascript(render partial: "shared/likers", locals: {post: @post})%>";

<% if @post.likes.any? %>
  document.querySelector("#like-count-<%= @post.id %>").setAttribute("data-toggle", "modal");
<% end %>